<h1>Listing posts</h1>

<table id="posts-list">
  <tr>
    <th>Title</th>
    <th>Content</th>
    <th>Post time</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @posts.each do |post| %>
  <tr>
    <td><%= post.title %></td>
    <td><%= post.content %></td>
    <td><%= post.post_time %></td>
    <td><%= link_to 'Show', post %></td>
    <td><%= link_to 'Edit Post', edit_post_path(post) %></td>
    <td><%= link_to 'Delete Post', post, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

<br />

<%= link_to 'New Post', new_post_path %>
